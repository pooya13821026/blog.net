@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var blogs = Model.Blog.ToList();
}

<main>
    <!-- page-banner-area-start -->
    <div class="page-banner-area page-banner-height-2" data-background="temp/img/banner/page-banner-4.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="page-banner-content text-center">
                        <h4 class="breadcrumb-title">وبلاگ</h4>
                        <div class="breadcrumb-two">
                            <nav>
                                <nav class="breadcrumb-trail breadcrumbs">
                                    <ul class="breadcrumb-menu">
                                        <li class="breadcrumb-trail">
                                            <a href="index.html"><span>خانه</span></a>
                                        </li>
                                        <li class="trail-item">
                                            <span>وبلاگ</span>
                                        </li>
                                    </ul>
                                </nav>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- page-banner-area-end -->
    <!-- news-detalis-area-start -->
    <div class="blog-area mt-120 mb-75">
        <div class="container">
            <div class="row">
                <div class="col-xl-8 col-lg-7">
                    <div class="row">
                        @if (blogs.Count > 0)
                        {
                            @foreach (var blog in Model.Blog)
                            {
                                <div class="col-xl-6">
                                    <div class="single-smblog mb-30">
                                        <div class="smblog-thum">
                                            <div class="blog-image w-img">
                                                <a asp-page="/Blogs/Detail" asp-route-id="@blog.Id"><img src="@blog.Img" alt="@blog.Title"></a>
                                            </div>
                                            <div class="blog-tag blog-tag-2">
                                                <a>غذا و نوشیدنی</a>
                                            </div>
                                        </div>
                                        <div class="smblog-content smblog-content-3">
                                            <h6><a asp-page="/Blogs/Detail" asp-route-id="@blog.Id">@blog.Title</a></h6>
                                            <span class="author mb-10">ارسال توسط <a>مدیر</a></span>
                                            <p>@blog.ShortDescription</p>
                                            <div class="smblog-foot pt-15">
                                                <div class="post-readmore">
                                                    <a href="blog-details.html"> ادامه مطلب <span class="icon"></span></a>
                                                </div>
                                                <div class="post-date">
                                                    <a href="blog-details.html">@blog.CreatedDate.ToShortDateString()</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <h3 class="text-danger">مقاله ای وجود ندارد</h3>
                        }
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="basic-pagination text-center pt-30 pb-30">
                                <nav>
                                    <ul>
                                        <li>
                                            <a href="blog.html" class="active">1</a>
                                        </li>
                                        <li>
                                            <a href="blog.html">2</a>
                                        </li>
                                        <li>
                                            <a href="blog.html">3</a>
                                        </li>
                                        <li>
                                            <a href="blog.html">5</a>
                                        </li>
                                        <li>
                                            <a href="blog.html">6</a>
                                        </li>
                                        <li>
                                            <a href="shop.html">
                                                <i class="fal fa-angle-double-left"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-5">
                    <div class="news-sidebar pl-10">
                        <div class="row">
                            <div class="col-lg-12 col-md-12">
                                <div class="widget">
                                    <h6 class="sidebar-title"> جستجو</h6>
                                    <div class="n-sidebar-search">
                                        <input type="text" placeholder="جستجو...">
                                        <a href="#"><i class="fal fa-search"></i></a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="widget">
                                    <h6 class="sidebar-title">فیدهای محبوب</h6>
                                    <div class="n-sidebar-feed">
                                        <ul>
                                            <li>
                                                <div class="feed-number">
                                                    <a href="blog-details.html"><img src="temp/img/blog/sm-b-1.jpg" alt=""></a>
                                                </div>
                                                <div class="feed-content">
                                                    <h6><a href="blog-details.html">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم</a></h6>
